# ===========================================
# AI Animal Tracking System - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Application Settings
# ===========================================
APP_NAME=AI Animal Tracking System
APP_ENV=development  # development, staging, production
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-here-change-in-production
APP_LOG_LEVEL=INFO

# ===========================================
# Server Settings
# ===========================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=1
SERVER_RELOAD=true

# ===========================================
# Database Settings
# ===========================================
# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/animal_tracking
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# InfluxDB (Time Series)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=animal-tracking
INFLUXDB_BUCKET=metrics

# ===========================================
# Storage Settings
# ===========================================
# Local Storage
STORAGE_TYPE=local  # local, s3, minio
STORAGE_PATH=./data

# MinIO/S3
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=animal-videos
MINIO_SECURE=false

# ===========================================
# AI Model Settings
# ===========================================
MODEL_DEVICE=auto  # auto, cpu, cuda, mps
MODEL_DETECTION=yolov8n.pt
MODEL_DETECTION_CONFIDENCE=0.5
MODEL_TRACKING_ALGORITHM=deepsort  # deepsort, bytetrack
MODEL_REID_MODEL=osnet_x0_25_msmt17.pt

# ===========================================
# Camera Settings
# ===========================================
DEFAULT_CAMERA_FPS=30
DEFAULT_CAMERA_RESOLUTION=1280x720
MAX_CAMERAS=10

# ===========================================
# Notification Settings
# ===========================================
# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@animal-tracking.local
SMTP_USE_TLS=true

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Push Notifications (Firebase)
FIREBASE_CREDENTIALS_PATH=./config/firebase-credentials.json

# ===========================================
# Security Settings
# ===========================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ===========================================
# Monitoring Settings
# ===========================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ===========================================
# Video Processing Settings
# ===========================================
VIDEO_RETENTION_DAYS=30
SNAPSHOT_RETENTION_DAYS=7
MAX_VIDEO_SIZE_MB=500
VIDEO_CODEC=h264

# ===========================================
# Behavior Analysis Settings
# ===========================================
FEEDING_ZONE_ENABLED=true
BEHAVIOR_ANALYSIS_INTERVAL=1.0  # seconds
ANOMALY_DETECTION_ENABLED=true
ANOMALY_THRESHOLD=2.5  # standard deviations

# ===========================================
# Health Monitoring Settings
# ===========================================
HEALTH_CHECK_INTERVAL=3600  # seconds
BCS_ESTIMATION_ENABLED=true
LAMENESS_DETECTION_ENABLED=true
EARLY_WARNING_ENABLED=true
